{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["./node_modules/*", "./src/types/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "ts-node-dev": {
    "transpileOnly": true,
    "ignore": [
      "node_modules"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
